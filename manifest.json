{
  "manifest_version": 3,
  "name": "Floating To-Do Tracker",
  "description": "A draggable To-Do list that stays on top and always visible.",
  "version": "1.1",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "style.css", "script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Floating To-Do"
  }
}
