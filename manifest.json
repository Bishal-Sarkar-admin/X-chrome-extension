{
  "manifest_version": 3,
  "name": "Task Tracker PiP",
  "version": "2.0",
  "description": "A floating task tracker with Picture-in-Picture support.",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}
